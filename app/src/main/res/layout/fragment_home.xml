<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.HomeFragment"
    android:background="#FFF">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#FFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginBottom="10dp">
            <android.support.v7.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="7dp"
                android:translationZ="2.5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/cardImage"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="#abcb89" />

                    <TextView
                        android:id="@+id/cardTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardImage"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/font_roboto"
                        android:text="Hidroponik : Blablablab"
                        android:textColor="#333333"
                        android:textSize="17.5dp" />

                    <TextView
                        android:id="@+id/cardUrl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardTitle"
                        android:fontFamily="@font/font_roboto"
                        android:text="www.google.com"
                        android:textColor="#AAA"
                        android:textSize="12.5dp" />

                    <TextView
                        android:id="@+id/cardViews"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardUrl"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/font_roboto"
                        android:text="130 views"
                        android:textColor="#333333"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/cardDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardViews"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/font_roboto"
                        android:text="Hidroponik : Blablablabsadasdasdasdasdasd
sadljlaksjd dasasdasdasd
asdasdasdasdsadasd"
                        android:textColor="#333333"
                        android:textSize="15dp" />
                </RelativeLayout>


            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/cardView"
                android:id="@+id/cardView1"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="7dp"
                android:translationZ="2.5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/cardImage1"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="#abcb89" />

                    <TextView
                        android:id="@+id/cardTitle1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardImage1"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/font_roboto"
                        android:text="Hidroponik : Blablablab"
                        android:textColor="#333333"
                        android:textSize="17.5dp" />

                    <TextView
                        android:id="@+id/cardUrl1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardTitle1"
                        android:fontFamily="@font/font_roboto"
                        android:text="www.google.com"
                        android:textColor="#AAA"
                        android:textSize="12.5dp" />

                    <TextView
                        android:id="@+id/cardViews1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardUrl1"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/font_roboto"
                        android:text="130 views"
                        android:textColor="#333333"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/cardDesc1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardViews1"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/font_roboto"
                        android:text="Hidroponik : Blablablabsadasdasdasdasdasd
sadljlaksjd dasasdasdasd
asdasdasdasdsadasd"
                        android:textColor="#333333"
                        android:textSize="15dp" />
                </RelativeLayout>


            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>