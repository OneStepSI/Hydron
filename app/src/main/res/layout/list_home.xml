<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/scheduleLine"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="#d2ea9b" />

            <TextView
                android:id="@+id/simulateTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/scheduleLine"
                android:textSize="30dp"
                android:fontFamily="@font/font_nunitoextra"
                android:textColor="#abcb89"
                android:text="Sawi" />
            <TextView
                android:id="@+id/textPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/scheduleLine"
                android:layout_below="@id/simulateTitle"
                android:text="Harga : Rp. "
                android:layout_marginLeft="10dp"
                android:textSize="17.5dp"
                android:textColor="#333333"
                android:fontFamily="@font/font_roboto"/>
            <TextView
                android:id="@+id/simulatePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/textPrice"
                android:layout_below="@id/simulateTitle"
                android:text="0"
                android:layout_marginLeft="5dp"
                android:textSize="17.5dp"
                android:textColor="#333333"
                android:fontFamily="@font/font_roboto"/>
        </RelativeLayout>


    </android.support.v7.widget.CardView>
</RelativeLayout>